#!/usr/bin/env bash

set -e -o pipefail

set -u

NPROC=$(nproc)

tar -xf check/check-*.tar.gz
pushd check-*/
    ./configure --prefix=/usr
    make -j "${NPROC}"
    make -j "${NPROC}" install
popd

tar -xf boost/boost_1_59_0.tar.gz
pushd boost_1_59_0
    ./bootstrap.sh --with-libraries=program_options,system
    ./b2 -j "${NPROC}"
popd

TMPDIR=$(mktemp -d --tmpdir="$(pwd)")
tar -xf pxc/Percona-XtraDB-Cluster-*.tar.gz -C "${TMPDIR}"
pushd  "${TMPDIR}"/percona-xtradb-cluster-galera
    patch -p2 < ../../patches/libgalera/libgalera_cmake.patch
    cmake . \
        -DCMAKE_INSTALL_PREFIX="${BOSH_INSTALL_TARGET}" \
        -DBOOST_ROOT=../../boost_1_59_0
    make -j "${NPROC}" install
popd
