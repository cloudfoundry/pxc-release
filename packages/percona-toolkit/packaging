set -e

source /var/vcap/packages/golang-1-linux/bosh/compile.env

mkdir -p percona-toolkit

mkdir -p "${BOSH_INSTALL_TARGET}"/bin

tar -C percona-toolkit -xzf ./percona-toolkit-*.tar.gz

cd ./percona-toolkit/percona-toolkit-* \
    && perl Makefile.PL \
    && make \
    && make test \
    && make install \
    && cp bin/* ${BOSH_INSTALL_TARGET}/bin \
    && rm -rf bin
