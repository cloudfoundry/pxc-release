#!/bin/bash -e

set -o errexit
set -o nounset
set -o pipefail

PROJECT_DIR="$(cd "$( dirname "${BASH_SOURCE[0]}" )/.." && pwd)"

cd "${PROJECT_DIR}" || exit 1

go fmt ./...

echo "Generating fakes..."
go generate ./...

echo "Vetting packages for potential issues..."
go vet ./...

echo "Testing packages..."
go run github.com/onsi/ginkgo/ginkgo -r -race -failOnPending -randomizeAllSpecs -p "$@" integration_test
